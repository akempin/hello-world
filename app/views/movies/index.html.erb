<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Your Favourite Movies Reviewed</h1>
    <p>Hashtag hoodie mublecore sellies organic dritnking water pickeld fruites in the juice of life for nice people come first is the word of the hour</p>
    <p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "brn btn-primary btn-lg" %></p>
  </div>
<% end %>

<div class="row">
  <% @movies.each do |movie| %>
  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
      <%= link_to (image_tag movie.image.url(:medium), class: 'image'), movie %>
    </div>
  </div>
  <% end %>
</div>